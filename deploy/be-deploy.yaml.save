apiVersion: apps/v1
kind: Deployment
metadata:
  name: postgres-deploy
  labels:
    name: postgres-deploy
    app: BC15-GC
spec:
  replicas: 2
  selector:
    matchLabels:
      name: postgres-pod
      app: BC15-GC
  template:
    metadata:
  name: be-pod
  labels:
    name: be-pod
    app: BC15-GC
spec:
  containers:
    - name: be
      image: dhanrajnath/back-end-local
      ports:
        - containerPort: 8080
      env:
        - name: "SPRING_DATASOURCE_URL"
          value: "jdbc:postgresql://postgres:5432/jobs"
        - name: "SPRING_DATASOURCE_USERNAME"
          value: "postgres"
        - name: "SPRING_DATASOURCE_PASSWORD"
          value: "1234"
        - name: "SPRING_JPA_HIBERNATE_DDL_AUTO"
          value: "update"
